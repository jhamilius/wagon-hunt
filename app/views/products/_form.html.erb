<%= simple_form_for @product do |f| %>
	<%= f.input :name , placeholder: "Kudoz", label: "Which product ?"  %>
	<%= f.input :tagline  , placeholder: "Tinder for jobs", label: "Which tagline ?"%>
	<%= f.input :url  , placeholder: "http://kudoz.co", label: "Which URL ?"%>
	<%= f.input :category, collection: ["tech","education","design"] , prompt: "Which category ?" %>
	<%= f.button :submit, "Save" , class: "btn btn-primary"%>
<% end %>
